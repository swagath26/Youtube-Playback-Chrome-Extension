{
    "manifest_version": 3,
    "name": "YouTube Playback Tools",
    "version": "1.0",
    "description": "Additional YouTube video playback tools",
    "permissions": ["storage", "activeTab"],
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/*"],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
