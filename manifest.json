{
    "manifest_version": 3,
    "name": "YT Playback Studio Lite",
    "version": "1.0",
    "icons": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    },
    "description": "Additional YouTube Video Playback Tools",
    "permissions": ["storage", "activeTab"],
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/*"],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
